%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: 'col-sm-3', control_col: 'col-sm-5' do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.text_field :full_name, label: "Full Name"
          = hidden_field_tag :invitation_token, @invitation_token

        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_3RgQyhpIDJaTDnf9f2THso25" data-amount="999" data-name="Myflix Registration" data-description="Registration Fee of $9.99" data-locale="auto" data-currency="cad"> </script>
